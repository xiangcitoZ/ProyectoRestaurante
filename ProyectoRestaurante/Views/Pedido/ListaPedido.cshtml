@model IEnumerable<ProyectoRestaurante.Models.Pedido>

@{
    ViewData["Title"] = "Pedido";
    decimal total = 0;
}

<hr/>

<h3>Pedidos</h3>

<table  class="table">
    <thead align="center">
        <tr >
            <th>
               Id
            </th>
            <th>
                Nombre
            </th>
           
            <th>
                Precio
            </th>

            <th>
                
            </th>
        </tr>
    </thead>
    <tbody align="center">


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdMenu)
                </td>
                
               
                <td>
                    @Html.DisplayFor(modelItem => item.ItemsMenu)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>

                @{
                    total = total + item.Total;
                }
                <td>
                    <a asp-controller="Pedido"
                   asp-action="Delete"
                   asp-route-idpedido="@item.IdPedido"
                       class="btn btn-outline-warning">
                        Eliminar
                    </a>
                </td>

               
            </tr>
        }
    </tbody>

</table>
<footer class="border-top footer text-muted">
    <h1>TOTAL: @total€</h1>
</footer>
