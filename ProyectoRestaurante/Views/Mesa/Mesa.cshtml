@model IEnumerable<ProyectoRestaurante.Models.Mesa>

@{
    ViewData["Title"] = "Mesa";
}

@section Scripts {
    <script>

        $(document).ready(function () {

            

            $("#displaybtn").click(function () {

                if ($(".btn_hidden").css("display") == "none") {
                    $(".btn_hidden").css("display", "inline-block");
                } else {
                    $(".btn_hidden").css("display", "none");
                }

              
            })


        })
    </script>
 }

<h1>Mesa</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<button class="btn btn-outline-danger" id="displaybtn">Editar</button>
<hr />

<a asp-controller="Home"
   asp-action="Index"
   class="btn btn-outline-success">
    Restaurante
</a>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdMesa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdMesa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                    <a asp-controller="Mesa"
                         asp-action="Edit"
                         asp-route-idmesa="@item.IdMesa"
                       class="btn btn-outline-dark">
                        Editar
                    </a> 
                    |
                    <a asp-controller="Mesa"
                         asp-action="Delete"
                         asp-route-idmesa="@item.IdMesa"
                       class="btn btn-outline-warning">
                        Eliminar
                    </a>
                    |
                    <a asp-controller="Home"
                     asp-action="Index"
                     asp-route-IdMesa="@item.IdMesa"
                       class="btn btn-outline-info">
                        Entrar
                    </a>
                
            </td>
        </tr>
}
    </tbody>
</table>
<div class="registermesa">
<div class="right">
<div class="menu-items">
    <ul>
        @foreach (var item in Model)
        {

                 
                <a asp-controller="Home"
                     asp-action="Index"
                     asp-route-IdMesa="@item.IdMesa"
                     asp-route-descripcion="Arroz">
                    <li>    

                            @if(item.Estado == "Libre")
                            {
                            <h1 style="color:#06a159">Mesa : @item.IdMesa </h1>
                           
 
                            }else
                            {
                            <h1 style="color:red">Mesa : @item.IdMesa </h1>
                           
                            }
                            <br/>
                         
                    Cantidad : @item.Cantidad

                   
                        <a style="display:none" class="btn_hidden" asp-controller="Mesa"
                       asp-action="Delete"
                       asp-route-idmesa="@item.IdMesa"
                       class="btn btn-outline-warning">
                            Eliminar
                        </a>
                    </li>
                </a>
          

        }
    </ul>

</div>
    </div>
</div>
