    </div>
    <div class="right">
        <div class="categories">
            <ul>
                <li><a href="#">Todo</a></li>
                <li><a href="#">Entrantes</a></li>
                <li><a href="#">Principal</a></li>
                <li><a href="#">Segundo</a></li>
                <li><a href="#">Bebibas</a></li>
                <li><a href="#">Postre</a></li>
            </ul>
        </div>
        <div class="menu-items">
            <ul>
                @foreach (var item in Model.Items)
                {

                    <li>
                       <a asp-controller="Pedido"
                       asp-action="Create"
                       asp-route-IdMenu="@item.IdMenu"
                       asp-route-ItemsMenu="@item.Nombre"
                       asp-route-Total="@item.Precio">
                        <img width:"50px" height:"50px" src="@item.Imagen">
                       @item.Nombre - @item.Precio €
                        </a>
                    </li>

                }
            </ul>

        </div>
        <div class="categories">
            <ul>

                <li>
                    <a asp-controller="ItemMenu"
                       asp-action="ItemMenu">
                        Item Menu
                    </a>
                </li>
                <li>
                    <a asp-controller="Mesa"
                       asp-action="Mesa">
